{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023", "dom"],
    "module": "ESNext",
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationDir": "dist",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src"]
}